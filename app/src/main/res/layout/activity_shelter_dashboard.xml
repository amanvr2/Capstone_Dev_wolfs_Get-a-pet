<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="45dp"
    android:paddingTop="24dp"
    android:paddingRight="45dp"
    android:background="@drawable/background_act"
    tools:context=".Activities.ShelterDashboardActivity">

    <ImageView
        android:id="@+id/shelterPhoto"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:srcCompat="@mipmap/shelter_icon" />


    <TextView
        android:id="@+id/ShelterUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shelter Name"
        android:textAlignment="center"
        android:fontFamily="@font/coustard"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addPetRedirect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add Pet"
        app:rippleColor="@android:color/holo_red_dark"
        android:fontFamily="@font/coustard"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/allPetsShelterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All pets"
        app:rippleColor="@android:color/holo_red_dark"
        android:fontFamily="@font/coustard"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/viewProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="My Profile"
        app:rippleColor="@android:color/holo_red_dark"
        android:fontFamily="@font/coustard"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/logoutBtnShelter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Logout"
        app:rippleColor="@android:color/holo_red_dark"
        android:fontFamily="@font/coustard"
        android:textColor="@color/design_default_color_error"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center" />

</LinearLayout>